<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application Theme -->

    <style name="Theme.Rhythmbox" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/dark_w4</item>
        <item name="colorPrimaryVariant">@color/dark_w8</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/dark_w8</item>
        <item name="colorSecondaryVariant">@color/dark_w7</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Android Window Boiler @theme -->

        <item name="android:background">@color/dark_w2</item>                               <!--    background          -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_w5</item>       <!--    statusBar           -->
        <item name="android:windowNoTitle">true</item>                                      <!--    no title bar        -->

    </style>

    <style name="Theme.Rhythmbox.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Rhythmbox.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Rhythmbox.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Alert Dialog Theme -->
    <style name="AlertDialogTheme">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/dark_w8</item>
    </style>

    <!-- Text View Theme -->
    <style name = "textViewTheme">
        <item name="android:textColor">@color/dark_w8</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_marginStart">@dimen/elemental_text</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Stat View Theme -->
    <style name = "statViewTheme">
        <item name="android:textColor">@color/dark_w8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>